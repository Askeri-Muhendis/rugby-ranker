<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RugbyRanker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <!-- System bar attributes -->
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <!-- Type attributes -->
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.RugbyRanker.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.RugbyRanker.Button</item>
        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RugbyRanker.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RugbyRanker.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RugbyRanker.LargeComponent</item>
        <!-- Widget style attributes -->
        <item name="bottomNavigationStyle">@style/Widget.RugbyRanker.BottomNavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.RugbyRanker.AppBarLayout</item>
        <item name="textInputStyle">@style/Widget.RugbyRanker.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.RugbyRanker.CardView</item>
        <item name="chipStyle">@style/Widget.RugbyRanker.Chip</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:progressBarStyle">@style/Widget.RugbyRanker.ProgressBar</item>
        <item name="bottomSheetStyle">@style/Widget.RugbyRanker.BottomSheet</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.RugbyRanker.BottomSheetDialog</item>
        <item name="recyclerViewStyle">@style/Widget.RugbyRanker.RecyclerView</item>
    </style>

    <style name="Theme.RugbyRanker.Main">
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- System bar attributes -->
        <item name="android:statusBarColor">@color/color_status_bar_main</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">@bool/window_light_system_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar_main</item>
    </style>

    <style name="Theme.RugbyRanker.Main.Launcher">
        <!-- Launcher window background -->
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <!-- System bar attributes -->
        <item name="android:navigationBarColor">@color/color_navigation_bar_launcher</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">@bool/window_light_system_bar</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.Secondary" parent="">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryVariant">@color/color_secondary_variant</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">@bool/window_light_system_bar</item>
        <item name="bottomSheetStyle">@style/Widget.RugbyRanker.BottomSheet.Modal</item>
    </style>

</resources>
